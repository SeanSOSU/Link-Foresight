{
  "manifest_version": 2,

  "name": "Link Foresight",
  "description": "This extension returns information about a hyperlink.",
  "version": "1.0",

  "permissions": [
    "https://*/"
  ],
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "css":  ["bubble.css"],
      "js": ["contentscript.js"]
    } 
  ]
}